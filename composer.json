{
    "name": "vigihdev/validators",
    "description": "Helper validator library for PHP.",
    "homepage": "https://github.com/vigihdev/validators",
    "type": "library",
    "keywords": [
        "php",
        "validators",
        "input validation",
        "custom validators"
    ],
    "license": "MIT",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "authors": [
        {
            "name": "Vigih Dev",
            "email": "vigihdev@gmail.com",
            "role": "developer"
        }
    ],
    "repositories": [
        {
            "type": "composer",
            "url": "https://satis.id"
        }
    ],
    "require": {
        "php": "^8.1",
        "vigihdev/exceptions": "dev-main"
    },
    "require-dev": {
        "phpunit/phpunit": "10.5.x-dev"
    },
    "autoload": {
        "psr-4": {
            "Vigihdev\\Validators\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Vigihdev\\Validators\\Tests\\": "tests/"
        }
    },
    "config": {
        "process-timeout": 0
    },
    "scripts": {
        "test": "phpunit",
        "dev": "php -S localhost:1332 local-dev/index.php"
    }
}
